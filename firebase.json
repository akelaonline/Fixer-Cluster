{
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "ignore": [
      "**/node_modules/**",
      ".env",
      ".env.local",
      "*.log"
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  }
}
